<!DOCTYPE html>
<html>
  <head>
    <title>Spidergram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script>
        window.images = {
          dummyPhoneNoAnimate: "<%= asset_path('login-no-animate.png') %>",
          dummyPhone: "<%= asset_path('dummy-phone-2x.png') %>",
          coreSprite2x: "<%= asset_path('core-sprite-2x.png') %>",
          coreSprite: "<%= asset_path('core-sprite.png') %>",
          icon: "<%= asset_path('icon.png') %>",
          screenshot1: "<%= asset_path('screenshot1.jpg') %>",
          screenshot2: "<%= asset_path('screenshot2.jpg') %>",
          screenshot3: "<%= asset_path('screenshot3.jpg') %>",
          screenshot4: "<%= asset_path('screenshot4.jpg') %>",
          screenshot5: "<%= asset_path('screenshot5.jpg') %>",
          logout_icon: "<%= asset_path('logout-icon.png') %>",
          remove_comment: "<%= asset_path('remove_icon.png') %>",
        }
    </script>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": "<%= current_user.id %>",
          "username": "<%= current_user.username %>",
          "email": "<%= current_user.email %>"
        };
      </script>
      
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>